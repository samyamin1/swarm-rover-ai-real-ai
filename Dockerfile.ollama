FROM ollama/ollama

# Install curl for health checks in the entrypoint script
RUN apt-get update && apt-get install -y curl && rm -rf /var/lib/apt/lists/*

# Copy the custom entrypoint script
COPY ollama_entrypoint.sh /usr/local/bin/
RUN chmod +x /usr/local/bin/ollama_entrypoint.sh

# Set the custom entrypoint
ENTRYPOINT ["/usr/local/bin/ollama_entrypoint.sh"]

# Expose Ollama port
EXPOSE 11434